<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
	<display-name i18n="content-type.product.display-name">Product</display-name>
	<display-name-label/>
	<display-name-expression>${productName}</display-name-expression>
	<description/>
	<is-abstract>false</is-abstract>
	<is-final>false</is-final>
	<is-built-in>false</is-built-in>
	<allow-child-content>true</allow-child-content>
	<super-type>base:structured</super-type>
	<form>
		<input type="TextLine" name="productName">
			<label i18n="content-type.product.input.productName">Title</label>
			<occurrences minimum="1" maximum="1"/>
			<help-text/>
			<default/>
			<config>
				<max-length/>
				<show-counter/>
				<regexp/>
			</config>
		</input>
		<input type="TextLine" name="shortTitle">
			<label i18n="content-type.product.input.shortTitle">Short Title</label>
			<occurrences minimum="0" maximum="1"/>
			<help-text>This is my help text for short title</help-text>
			<default/>
			<config>
				<max-length/>
				<show-counter/>
				<regexp/>
			</config>
		</input>
		<input type="HtmlArea" name="intro">
			<label i18n="content-type.product.input.intro">Intro</label>
			<occurrences minimum="0" maximum="1"/>
			<help-text/>
			<default/>
			<config>
				<exclude/>
				<include/>
				<allowHeadings/>
			</config>
		</input>
		<input type="HtmlArea" name="note">
			<label i18n="content-type.product.input.note">Text</label>
			<occurrences minimum="0" maximum="1"/>
			<help-text/>
			<config/>
			<default/>
		</input>
		<input type="TextLine" name="atc">
			<label i18n="content-type.product.input.atc">ATC</label>
			<occurrences minimum="0" maximum="1"/>
			<help-text/>
			<default/>
			<config>
				<max-length/>
				<show-counter/>
				<regexp/>
			</config>
		</input>
		<input type="ContentSelector" name="activeIngredient">
			<label i18n="content-type.product.input.activeIngredient">Active Ingredient</label>
			<occurrences minimum="1" maximum="1"/>
			<config>
				<allowPath>${site}/*</allowPath>
				<treeMode>false</treeMode>
				<allowContentType>active_ingredients</allowContentType>
				<hideToggleIcon/>
			</config>
			<help-text/>
		</input>
		<input type="CustomSelector" name="legemiddel">
			<label i18n="content-type.product.input.pharmaceutical">Pharmaceutical SNOMED CT</label>
			<occurrences minimum="0" maximum="0"/>
			<config>
				<service>getSnowstormConceptRefset</service>
			</config>
			<help-text/>
		</input>
		<input type="TextLine" name="pharmaceuticalForm">
			<label i18n="content-type.product.input.pharmaceuticalForm">Pharmaceutical Form</label>
			<occurrences minimum="0" maximum="1"/>
			<help-text/>
			<default/>
			<config>
				<max-length/>
				<show-counter/>
				<regexp/>
			</config>
		</input>
		<input type="TextLine" name="strength">
			<label i18n="content-type.product.input.strength">Strength</label>
			<occurrences minimum="0" maximum="1"/>
			<help-text/>
			<default/>
			<config>
				<max-length/>
				<show-counter/>
				<regexp/>
			</config>
		</input>
		<input type="ContentSelector" name="usage">
			<label i18n="content-type.product.input.usage">Usage</label>
			<occurrences minimum="1" maximum="0"/>
			<config>
				<allowPath>${site}/*</allowPath>
				<treeMode>false</treeMode>
				<allowContentType>usage</allowContentType>
				<hideToggleIcon/>
			</config>
			<help-text/>
		</input>
		<input type="TextLine" name="itemNumber">
			<label i18n="content-type.product.input.itemNumber">Item Number</label>
			<occurrences minimum="0" maximum="1"/>
			<help-text/>
			<default/>
			<config>
				<max-length/>
				<show-counter/>
				<regexp/>
			</config>
		</input>
		<input type="TextLine" name="marketingStatus">
			<label i18n="content-type.product.input.marketingStatus">Marketing Status</label>
			<occurrences minimum="0" maximum="1"/>
			<help-text/>
			<default/>
			<config>
				<max-length/>
				<show-counter/>
				<regexp/>
			</config>
		</input>
		<input name="myhtmlarea" type="HtmlArea">
			<label>My HTML Area</label>
			<help-text>This is my html area</help-text>
			<occurrences minimum="0" maximum="1"/>
			<default>My html area with a default value :)</default>
			<config>
				<exclude>*</exclude>
				<include>Format | JustifyBlock JustifyLeft JustifyCenter JustifyRight | BulletedList NumberedList Outdent Indent | SpecialChar Anchor Image Macro Link Unlink | Table | PasteModeSwitcher</include>
				<allowHeadings>h1 h3 h5</allowHeadings>
			</config>
		</input>
		<item-set name="stockStatus">
			<label i18n="content-type.product.item-set.stockStatus">Stock Status</label>
			<occurrences minimum="0" maximum="0"/>
			<items>
				<input type="TextLine" name="number">
					<label i18n="content-type.product.item-set.stockStatus.input.number">Number</label>
					<occurrences minimum="0" maximum="1"/>
					<help-text/>
					<default/>
					<config>
						<max-length/>
						<show-counter/>
						<regexp/>
					</config>
				</input>
				<input type="ContentSelector" name="hospital">
					<label i18n="content-type.product.item-set.stockStatus.input.hospital">Hospital</label>
					<occurrences minimum="0" maximum="1"/>
					<config>
						<allowPath>${site}/*</allowPath>
						<treeMode>false</treeMode>
						<allowContentType>storage_facilities</allowContentType>
						<hideToggleIcon/>
					</config>
					<help-text/>
				</input>
				<input type="TextLine" name="storageFacilitie">
					<label i18n="content-type.product.item-set.stockStatus.input.storageFacilitie">Storage Facilitie</label>
					<occurrences minimum="0" maximum="1"/>
					<help-text/>
					<default/>
					<config>
						<max-length/>
						<show-counter/>
						<regexp/>
					</config>
				</input>
			</items>
		</item-set>
	</form>
	<x-data name="metadata"/>
	<x-data name="migration"/>
</content-type>
