<?xml version="1.0" encoding="UTF-8"?>
<content-type>
	<display-name>Test</display-name>
	<display-name-label></display-name-label>
	<display-name-expression></display-name-expression>
	<description></description>
	<super-type>base:structured</super-type>
	<is-abstract>false</is-abstract>
	<is-final>false</is-final>
	<is-built-in>false</is-built-in>
	<allow-child-content>true</allow-child-content>
	<form>
		<input name="mytextline" type="TextLine">
			<label>My text line</label>
			<help-text/>
			<occurrences minimum="0" maximum="1"/>
			<default>Default text goes here</default>
			<config>
				<max-length>100</max-length>
				<show-counter>true</show-counter>
				<regexp>/*/g</regexp>
			</config>
		</input>
		<field-set>
			<label>myfieldset</label>
			<items>
				<input name="mycheckbox" type="CheckBox">
					<label i18n="fieldset.translation.key">My check box</label>
					<help-text/>
					<occurrences minimum="0" maximum="1"/>
					<default>checked</default>
					<config>
						<alignment>left</alignment>
					</config>
				</input>
			</items>
		</field-set>
	</form>
</content-type>
